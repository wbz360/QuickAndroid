<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res/com.appdsn.demo">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF4C55"
        android:gravity="center"
        android:text="发现"
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#FF4C55" />

    <com.appdsn.qa.ui.pullrefreshlayout.PullRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:refreshType="smartisan"
        android:orientation="vertical" >

        <com.appdsn.qa.ui.LoadMoreListView
            android:id="@+id/listFilmHot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#9a9a9a"
            android:dividerHeight="1px"
            android:headerDividersEnabled="false" />
    </com.appdsn.qa.ui.pullrefreshlayout.PullRefreshLayout>

</LinearLayout>